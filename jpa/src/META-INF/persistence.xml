<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SSP-JPA">
		<class>de.hofuniversity.core.Identifier</class>
		<class>de.hofuniversity.core.Named</class>
		<class>de.hofuniversity.core.Player</class>
		<class>de.hofuniversity.core.Team</class>
		<class>de.hofuniversity.core.Stadium</class>
		<class>de.hofuniversity.core.GeologicalCoordinates</class>
		<class>de.hofuniversity.core.Goal</class>
		<class>de.hofuniversity.core.Match</class>
		<class>de.hofuniversity.core.Result</class>
		<properties>
			<property name="hibernate.connection.username" value="root"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/soccer"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="log4j.logger.org.hibernate" value="debug"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/soccer"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
